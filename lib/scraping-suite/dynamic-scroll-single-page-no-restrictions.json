
{
  "title": "Static - Scroll - Single Page - No Restrictions",
  
  "vhosts": [
    {
      "root": "./scroll",
      "hostname": "sitea.com"
    }
  ],
  
  "definition": {
    "url": "http://sitea.com/scroll-contentA.html",
    "scenario": "static-content",
    "pluginOpts": [
      {
        "name": "ExtractHtmlContentPlugin",
        "selectorPairs": [
          {
            "selector": "p.entry span"
          }
        ]
      },
      {
        "name": "ScrollPlugin",
        "after": "UpsertResourcePlugin",
        "stabilityCheck": 200
      }
    ]
  },

  "resources": [
    {
      "url": "http://sitea.com/scroll-contentA.html",
      "contentType": "text/html",
      "content": null,
      "actions": null
    },
    {
      "url": "http://sitea.com/scroll-contentA.html",
      "contentType": "text/html",
      "content": [["contentA-0"]],
      "actions": ["scroll#1"]
    },
    {
      "url": "http://sitea.com/scroll-contentA.html",
      "contentType": "text/html",
      "content": [["contentA-1"]],
      "actions": ["scroll#2"]
    },
    {
      "url": "http://sitea.com/scroll-contentA.html",
      "contentType": "text/html",
      "content": [["contentA-2"]],
      "actions": ["scroll#3"]
    }
  ]
}